<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LeaderBFrag">


    <RelativeLayout
        android:id="@+id/leaderB_layout"
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <TextView
            android:id="@+id/leaderB_head"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FCEDEA"
            android:gravity="center"
            android:text="Leaderdoard"
            android:textSize="20dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/leaderB_layout">
        <LinearLayout
            android:id="@+id/list_items_layout"
            android:layout_height="1200dp"
            android:layout_width="wrap_content">

            <ListView
                android:id="@+id/leaderB_list"
                android:layout_width="match_parent"
                android:layout_height="1200dp"
                tools:listitem="@layout/fragment_leader_b_item" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>