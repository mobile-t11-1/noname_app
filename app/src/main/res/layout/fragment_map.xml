<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MapFrag">



    <fragment
        android:id="@+id/google_map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/discover_layout2"
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <TextView
            android:id="@+id/discover_layout2_head"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FCEDEA"
            android:gravity="center"
            android:text="Discover"
            android:textSize="20dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <Button
        android:id="@+id/lib_search_btn"
        android:layout_width="90dp"
        android:layout_height="36dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"
        android:background="@drawable/normal_btn_style"
        android:text="Library"
        android:textSize="12dp" />

    <Button
        android:id="@+id/cafe_search_btn"
        android:layout_width="90dp"
        android:layout_height="36dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/normal_btn_style"
        android:text="CafÃ©"
        android:textSize="12dp" />

    <Button
        android:id="@+id/park_search_btn"
        android:layout_width="90dp"
        android:layout_height="36dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:background="@drawable/normal_btn_style"
        android:text="Park"
        android:textSize="12dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/locate_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="90dp"
        android:clickable="true"
        android:src="@drawable/ic_locate"
        app:backgroundTint="@color/primary_5"
        app:fabSize="mini" />

</RelativeLayout>