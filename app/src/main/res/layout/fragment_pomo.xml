<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PomoFrag">


    <TextView
        android:id="@+id/text_view_countdown"
        android:layout_width="206dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:text="00:00"
        android:textColor="@color/black"
        android:textSize="72sp" />

    <ProgressBar
        android:id="@+id/clock_progress"
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="2dp"
        android:indeterminateOnly="false"
        android:progress="0"
        android:progressDrawable="@drawable/circle_clock" />

    <TextView
        android:id="@+id/section_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="24dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/pomo_no_section"
        />

    <TextView
        android:id="@+id/section_2"
        android:layout_below="@+id/section_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="24dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/pomo_no_section"
        />

    <TextView
        android:id="@+id/section_3"
        android:layout_below="@+id/section_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="24dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/pomo_no_section"
        />

    <TextView
        android:id="@+id/section_4"
        android:layout_below="@+id/section_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="24dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/pomo_no_section"
        />


    <TextView
        android:id="@+id/text_view_rest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="74dp"
        android:layout_marginTop="133dp"
        android:textColor="@color/black"
        android:textSize="48sp"
        android:text="Take a break"
        android:visibility="invisible"
        tools:visibility="visible" />

    <ImageButton
        android:id="@+id/button_start_pause"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_below="@+id/clock_progress"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="110dp"
        android:layout_toEndOf="@+id/button_reset"
        android:background="@drawable/small_btn_style"
        android:src="@drawable/ic_play_fill"
        android:visibility="invisible"
        tools:visibility="visible" />/>

    <ImageButton
        android:id="@+id/button_reset"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_below="@+id/clock_progress"
        android:layout_centerHorizontal="true"
        android:background="@drawable/small_btn_style"
        android:src="@drawable/ic_trash_fill" />

    <ImageButton
        android:id="@+id/btn_settings"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_below="@+id/clock_progress"
        android:layout_centerHorizontal="true"
        android:background="@drawable/small_btn_style"
        android:src="@drawable/ic_settings"
        android:visibility="visible"
        tools:visibility="visible" />


</RelativeLayout>