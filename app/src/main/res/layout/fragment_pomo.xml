<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PomoFrag">
    <RelativeLayout
        android:id="@+id/pomo_head_layout"
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <TextView
            android:id="@+id/pomo_title"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#FCEDEA"
            android:gravity="center"
            android:text="Pomodoro"
            android:textSize="20dp"
            android:textStyle="bold"
            android:singleLine="true"
            android:maxLength="30"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/pomo_instruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif"
        android:layout_marginTop="90dp"
        android:text="Face down your phone to start focus!"
        android:textColor="@color/sec_2"
        android:textSize="20sp"
        android:visibility="invisible"
        tools:visibility="visible"/>



    <TextView
        android:id="@+id/text_view_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="230dp"
        android:fontFamily="sans-serif-condensed-light"
        android:text="00:00"
        android:textColor="@color/sec_2"
        android:textSize="108sp" />

    <TextView
        android:id="@+id/text_view_rest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/sec_2"
        android:fontFamily="sans-serif-condensed-light"
        android:textSize="48sp"
        android:text="Take a break"
        android:visibility="invisible"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/text_finished"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/sec_2"
        android:fontFamily="sans-serif-condensed"
        android:textSize="48sp"
        android:textStyle="bold"
        android:text="You made it!"
        android:visibility="invisible"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/text_restart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/sec_2"
        android:fontFamily="sans-serif-condensed-light"
        android:textSize="40sp"
        android:text="Start a new one?"
        android:visibility="invisible"
        tools:visibility="visible" />


    <ProgressBar
        android:id="@+id/clock_progress"
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:layout_marginTop="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:indeterminateOnly="false"
        android:progress="0"
        android:progressDrawable="@drawable/circle_clock" />


    <TextView
        android:id="@+id/section_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="24dp"
        android:layout_marginTop="257dp"
        android:background="@drawable/pomo_no_section"
        />

    <TextView
        android:id="@+id/section_2"
        android:layout_below="@+id/section_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="24dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/pomo_no_section"
        />

    <TextView
        android:id="@+id/section_3"
        android:layout_below="@+id/section_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="24dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/pomo_no_section"
        />

    <TextView
        android:id="@+id/section_4"
        android:layout_below="@+id/section_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="24dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/pomo_no_section"
        />


    <ImageButton
        android:id="@+id/button_restart"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="520dp"
        android:background="@drawable/small_btn_style"
        android:src="@drawable/ic_replay"
        android:visibility="invisible"
        tools:visibility="visible"/>

    <ImageButton
        android:id="@+id/button_reset"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="520dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/small_btn_style"
        android:src="@drawable/ic_trash_fill" />

    <ImageButton
        android:id="@+id/btn_settings"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="520dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/small_btn_style"
        android:src="@drawable/ic_settings"
        android:visibility="visible"
        tools:visibility="visible" />


</RelativeLayout>