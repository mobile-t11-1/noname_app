<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PomoFrag">


    <TextView
        android:id="@+id/text_view_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:text="00:00"
        android:textColor="@color/black"
        android:textSize="72sp" />

    <ProgressBar
        android:id="@+id/clock_progress"
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:layout_centerHorizontal="true"
        android:indeterminateOnly="false"
        android:progressDrawable="@drawable/circle_clock"
        android:progress="0"/>


    <TextView
        android:id="@+id/text_view_rest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take a break"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="210dp"
        android:textColor="@color/black"
        android:textSize="48sp"
        android:visibility="invisible"
        tools:visibility="visible" />




    <ImageButton
        android:id="@+id/button_start_pause"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/clock_progress"
        android:background="@drawable/small_btn_style"
        android:src="@drawable/ic_play_fill" />

    <ImageButton
        android:id="@+id/button_reset"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/small_btn_style"
        android:layout_below="@+id/clock_progress"
        android:src="@drawable/ic_trash_fill" />

    <ImageButton
        android:id="@+id/btn_settings"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/clock_progress"
        android:background="@drawable/small_btn_style"
        android:src="@drawable/ic_settings" />


</RelativeLayout>